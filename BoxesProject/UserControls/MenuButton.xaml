<UserControl x:Class="BoxesProject.UserControls.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoxesProject.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="150">
    <Grid>
        <Viewbox>
            <Button x:Name="btnMain" Background="BurlyWood" Click="btnMain_Click" BorderThickness="3" BorderBrush="BlanchedAlmond"
             FontSize="18"  MinWidth="255" MinHeight="50" MaxWidth="400" MaxHeight="130" Foreground="Black"
             FontWeight="UltraBlack" Content="{Binding ButtonText}"/>
        </Viewbox>
    </Grid>
</UserControl>
